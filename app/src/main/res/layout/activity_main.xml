<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rule_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="RuleView:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:textColor="#48b975"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_value"
            android:layout_toRightOf="@+id/tv_value"
            android:paddingTop="4dp"
            android:text="kg"
            android:textColor="#48b975"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.bala.ruler.RuleView
        android:id="@+id/gv_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="50dp"
        app:zjun_textSize="18sp" />

    <com.bala.ruler.FeetView
        android:id="@+id/feetView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="50dp"
        app:zjun_textSize="18sp" />

</LinearLayout>